@{
    var js = "";
    var jb = "";
    if (ViewData["js"] != null)
        js = ViewData["js"].ToString();
       
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QA1_lesson_3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header >
        <nav class="nav3">
                @if (Model != null)
                {
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            @Model.fullname
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li>
                                <a class="dropdown-item" href="javascript:void(0);"
                               data-bs-toggle="modal" data-bs-target="#modalChangePass">
                                    Change Pass
                                </a>
                            </li>
                            <li><a class="dropdown-item" href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#ModalEdit">Edit profile</a></li>
                            <li>
                                <a class="dropdown-item" href="javascript:void(0);" onclick="logout()">log out</a>
                            </li>
                        </ul>
                    </div>
                }
                </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="modalChangePass" class="modal" tabindex="-1">
        <div class="modall-c-dialog">
            <div class="modaontent">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3 row">
                        <label for="staticEmail" class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext"
                            id="txtUsername" value="@(Model!=null?Model.username:"")"/>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="txtOldPass" class="col-sm-4 col-form-label">Old Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="txtOldPass">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="txtPass1" class="col-sm-4 col-form-label">New Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="txtPass1">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="txtPass2" class="col-sm-4 col-form-label">Retype New Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="txtPass2">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" onclick="changePass()" class="btn btn-primary">changes</button>
                </div>
            </div>
        </div>
    </div>
  
  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.tmpl.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (js != "")
    {
        <script src="~/js/@js" asp-append-version="true"></script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
